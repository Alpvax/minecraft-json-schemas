{
	"$schema": "http://json-schema.org/schema#",
	"id":"https://raw.githubusercontent.com/Levertion/minecraft-json-schema/master/advancement.json",
	"type":"object",
	"properties": {
		"display":{
			"type":"object",
			"properties": {
				"icon":{
					"properties":{
						"item":{
							"$ref": "minecraft_definitions.json#/item_name"
						},
						"data":{
							"type":"integer",
							"default":0
						}
					}
				},
				"title":{
					"$ref": "minecraft_definitions.json#/json-component"
				},
				"description":{
					"$ref": "minecraft_definitions.json#/json-component"
				},
				"frame":{
					"type":"string",
					"enum": [
						"challenge",
						"task",
						"goal"
					]
				},
				"backgound":{
					"type":"string"
				},
				"show_toast":{
					"type":"boolean"
				},
				"announce_to_chat":{
					"type":"boolean"
				},
				"hidden":{
					"type":"boolean"
				}
			}
		},
		"definitions":{
			
		}
	}
}