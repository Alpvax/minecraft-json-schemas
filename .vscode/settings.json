            "url": "/java/assets/model.json"
        },
        {
            "fileMatch": ["/playground/sounds/*.json"],
            "url": "/java/assets/sounds.json"
        },
        {
            "fileMatch": ["/playground/advancements/*.json"],
            "url": "/java/data/advancement.json"
        },
        {
            "fileMatch": ["/playground/loot_tables/*.json"],
            "url": "/java/data/loot_table.json"
