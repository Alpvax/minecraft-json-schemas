        {
            "fileMatch": ["/playground/animation/*.mcmeta"],
            "url": "/java/assets/animation.mcmeta.json"
        },
        {
            "fileMatch": ["/playground/blockstates/*.json"],
            "url": "/java/assets/blockstates.json"
        },
        {
